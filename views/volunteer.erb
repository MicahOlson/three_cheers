<% if @volunteer %>
  <h3>Update: <%= @volunteer.name %></h3>
  <% if @volunteer.project_id != 0 %>
    <h4>Project: <%= @volunteer.project.title %></h4>

    <form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
      <input name="_method" type="hidden" value="patch">
      <div class="form-group">
        <label for="volunteer-name">Change volunteer's name</label>
        <input id="volunteer-name" name="name" class="form-control" type="text" value="<%= @volunteer.name %>" required>
      </div>
      <button type="submit" class="btn btn-dark">Update Volunteer</button>
      <div>
        <button type="submit" class="btn btn-warning">Remove from Project</button>
      </div>
    </form>

    <form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
      <input name="_method" type="hidden" value="delete">
      <button type="submit" class="btn btn-danger">Delete Volunteer</button>
    </form>

    <p><a href="/projects/<%= @volunteer.project.id %>">Go to <%= @volunteer.project.title %></a></p>
  <% else %>
    <h4>Project: Not yet assigned</h4>
    <p><a href="/projects">Select a project</a><p>
    <p><a href="/volunteers/<%= @volunteer.id %>/edit">Edit volunteer</a><p>
    <p><a href="/volunteers">Back</a><p>

  <% end %>

<% else %>
  <h3>This volunteer is no longer in our database.</h3>
  <p><a href="/volunteers">Return to volunteers list</a></p>

<% end %>
