<h3>Volunteers List</h3>
<% if @volunteers.any? %>
  <ul>
    <% @volunteers.each do |volunteer| %>
        <% if volunteer.project_id == 0 %>
          <li><a href="/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a> - available for a project</li>
        <% else %>
          <li><a href="/projects/<%= volunteer.project.id %>/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a> - <a href="/projects/<%= volunteer.project.id %>"><%= volunteer.project.title %></a></li>
        <% end %>
    <% end %>
  </ul>
<% else %>
  <p>Sorry, we don't have any volunteers at the moment.</p>
<% end %>

<hr>

<h5>Add a new volunteer</h5>
<form action="/volunteers" method="post">
  <div class="form-group">
    <input id="volunteers-name" name="name" class="form-control" type="text" placeholder="Enter a name here" required>
  </div>
  <button type="submit" class="btn btn-dark">Add Volunteer</button>
</form>
