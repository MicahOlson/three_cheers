<h3>Volunteers</h3>
<h3>Add a new volunteer</h3>
<form action="/volunteers" method="post">
  <div class="form-group">
    <label for="volunteers-name">Name</label>
    <input id="volunteers-name" name="name" class="form-control" type="text" required>
  </div>
  <button type="submit" class="btn btn-dark">Add Volunteer</button>
</form>

<% if @volunteers.any? %>
  <ul>
    <% @volunteers.each do |volunteer| %>
        <% if volunteer.project_id == 0 %>
          <li><a href="/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a> - Available</li>
        <% else %>
          <li><a href="/projects/<%= volunteer.project.id %>/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a> - <a href="/projects/<%= volunteer.project.id %>"><%= volunteer.project.title %></a></li>
        <% end %>
    <% end %>
  </ul>
<% else %>
  <p>Sorry, we don't have any volunteers at the moment.</p>
<% end %>
